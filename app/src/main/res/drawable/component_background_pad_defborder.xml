<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="2dp" android:color="#a0a0a0a0" />
                </shape>
            </item>
            <item android:bottom="1dp">
                <shape android:shape="rectangle">
                    <padding android:bottom="12dp" android:left="12dp" android:right="12dp" android:top="12dp" />
                    <solid android:color="#a0ffffff" />
                    <stroke android:width="1dp" android:color="#ffa0a0a0" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="2dp" android:color="#a0a0e0a0" />
                </shape>
            </item>
            <item android:bottom="1dp">
                <shape android:shape="rectangle">
                    <padding android:bottom="12dp" android:left="12dp" android:right="12dp" android:top="12dp" />
                    <solid android:color="#a0ffffff" />
                    <stroke android:width="1dp" android:color="#ffa0e0a0" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>