<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/view_document_imagestrip_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:background="@drawable/component_background_nopad"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:minHeight="192dp"
        android:scaleType="fitXY"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <com.navercorp.android.lseapp.widget.DocumentComponentModifierView
        android:id="@+id/view_document_imagestrip_document_component_adder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_document_imagestrip_image"
        android:visibility="invisible" />

</RelativeLayout>