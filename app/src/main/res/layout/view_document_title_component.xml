<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/view_document_title_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/view_document_title_component_text_hint"
        android:minHeight="@dimen/view_document_title_component_text_height"
        android:scrollHorizontally="false"
        android:background="@drawable/component_background_pad"
        android:scrollbars="vertical"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <com.navercorp.android.lseapp.widget.DocumentComponentAdderView
        android:id="@+id/view_document_title_document_component_adder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

</LinearLayout>