<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.navercorp.android.lseapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".app.writescreenarticle.WriteScreenArticleActivity"
            android:configChanges="keyboard|screenSize"
            android:label="@string/activity_write_screen_article_title"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.selectsavedarticles.SelectSavedArticleActivity"
            android:configChanges="keyboard|screenSize"
            android:label="@string/activity_select_saved_articles_title"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".app.selectlocationsearch.SelectLocationSearchActivity"
            android:configChanges="keyboard|screenSize"
            android:screenOrientation="portrait"
            android:label="@string/activity_select_location_search_title"
            android:windowSoftInputMode="adjustResize"></activity>
    </application>

</manifest>